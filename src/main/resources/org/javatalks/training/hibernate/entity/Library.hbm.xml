<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.javatalks.training.hibernate.entity">
  <class name="Library" table="library">
    <id name="id">
      <generator class="increment"/>
    </id>

    <list name="books" cascade="all">
      <key column="library_id" foreign-key="book_library_fk"/>
      <list-index column="book_order"/>
      <one-to-many class="Book"/>
    </list>

    <list name="owners" inverse="true">
      <key column="library_id" foreign-key="owner_library_fk"/>
      <list-index column="owner_order"/>
      <one-to-many class="LibraryOwner"/>
    </list>
  </class>

  <class name="Book" table="book">
    <id name="id">
      <generator class="increment"/>
    </id>
    <property name="name"/>
  </class>
  <class name="LibraryOwner" table="library_owner">
    <id name="id">
      <generator class="increment"/>
    </id>
    <many-to-one name="library" column="library_id" class="Library"/>
  </class>
</hibernate-mapping>