<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.javatalks.training.hibernate.entity">
  <class name="Book" table="book">
    <id name="id">
      <!--Asks database to generate the ID. Then either gets the generated id via additional select, or
      uses JDBC support for returning them. Note, that when it comes to Oracle, it uses sequence and thus
      we need explicitly specify the sequence name, or it will use HIBERNATE_SEQUENCE by default-->
      <generator class="native"/>
    </id>
    <property name="title"/>
  </class>
</hibernate-mapping>