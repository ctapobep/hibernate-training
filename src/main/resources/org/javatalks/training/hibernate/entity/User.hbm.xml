<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.javatalks.training.hibernate.entity">
  <class name="User" table="users" abstract="true">
    <id name="id">
      <generator class="native"/>
    </id>
    <property name="name"/>

    <joined-subclass name="Author" table="author">
      <key column="user_id" foreign-key="author_user"/>
      <property name="rating"/>
    </joined-subclass>

    <joined-subclass name="Personnel" table="personnel">
      <key column="user_id" foreign-key="personnel_user"/>
      <property name="position"/>
    </joined-subclass>
  </class>

</hibernate-mapping>