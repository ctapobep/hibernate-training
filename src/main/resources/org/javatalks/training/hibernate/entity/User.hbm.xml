<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.javatalks.training.hibernate.entity">
  <class name="User" table="users">
    <id name="id">
      <generator class="native"/>
    </id>
    <property name="username" />
    <set name="booksByOrm" inverse="false" cascade="save-update">
      <key column="author_id" foreign-key="book_author_fk"/>
      <one-to-many class="Book" />
    </set>
  </class>
  <class name="AccessCard" table="access_card">
    <id name="id">
      <generator class="native"/>
    </id>
    <property name="code"/>
    <property name="type">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">AccessCard$Type</param>
        <!-- 5 means 'SMALLINT', see java.sql.Types -->
        <param name="type">5</param>
      </type>
    </property>
  </class>
</hibernate-mapping>