<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.javatalks.training.hibernate.entity.map">
  <class name="Equipment" table="equipment">
    <id name="id">
      <generator class="native"/>
    </id>
    <property name="libraryName"/>
    <map name="tables" cascade="save-update">
      <key column="equipment_id"/>
      <map-key type="java.lang.String" column="number"/>
      <one-to-many class="Table"/>
    </map>

    <map name="shelves" table="shelf_stand" cascade="save-update">
      <key column="equipment_id" foreign-key="shelves_equipment_fk" not-null="true" />
      <map-key-many-to-many column="shelf_id" class="Shelf" foreign-key="stand_shelf" />
      <many-to-many column="stand_id" foreign-key="shelf_stand" class="Stand"/>
    </map>
  </class>

  <class name="Shelf" table="shelf">
    <id name="id">
      <generator class="native"/>
    </id>
    <property name="number"/>
  </class>

  <class name="Stand" table="stand">
    <id name="id">
      <generator class="native"/>
    </id>
    <property name="number"/>
  </class>

  <class name="Table" table="tables">
    <id name="id">
      <generator class="native"/>
    </id>
    <property name="size"/>
    <property name="number"/>
  </class>
</hibernate-mapping>