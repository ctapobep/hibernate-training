<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  <changeSet id="AddBookTable" author="ctapobep">
    <createTable tableName="book">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="title" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <!--many to one, this association is actually mandatory and we would like to have not-null here, but
      our preference is to keep validation logic outside of DB, because DB is the hardest place to be refactored.-->
      <column name="author_id" type="bigint">
        <constraints foreignKeyName="book_author_fk" references="users(id)"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
