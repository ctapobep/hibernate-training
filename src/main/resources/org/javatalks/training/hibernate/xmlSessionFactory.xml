<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
  <!--import this context if you want to work with XML based Hibernate mapping-->
  <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
    <property name="dataSource" ref="dataSource"/>
    <property name="mappingResources">
      <list>
        <value>/org/javatalks/training/hibernate/entity/Book.hbm.xml</value>
        <value>/org/javatalks/training/hibernate/entity/User.hbm.xml</value>
        <value>/org/javatalks/training/hibernate/entity/Library.hbm.xml</value>
        <value>/org/javatalks/training/hibernate/entity/Publisher.hbm.xml</value>
      </list>
    </property>
    <property name="hibernateProperties" ref="hibernateProps"/>
  </bean>
</beans>