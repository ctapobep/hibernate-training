<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
  <!--import this context if you want to work with XML based Hibernate mapping-->
  <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
    <property name="dataSource" ref="dataSource"/>
    <property name="mappingDirectoryLocations">
      <array>
        <value>classpath:/org/javatalks/training/hibernate/entity</value>
      </array>
    </property>
    <property name="hibernateProperties" ref="hibernateProps"/>
  </bean>
  <util:properties id="mappingProps">
    <prop key="mapping">xml</prop>
  </util:properties>
</beans>