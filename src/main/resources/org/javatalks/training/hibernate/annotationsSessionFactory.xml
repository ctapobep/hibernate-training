<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
  <!--import this context from the main one if you want to use annotation-based Hibernate mapping-->
  <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
    <property name="dataSource" ref="dataSource"/>
    <property name="annotatedClasses">
      <list>
        <value>org.javatalks.training.hibernate.entity.Book</value>
      </list>
    </property>
    <!--all the properties are defined in the main context, we're just referencing them from here-->
    <property name="hibernateProperties" ref="hibernateProps"/>
  </bean>

</beans>