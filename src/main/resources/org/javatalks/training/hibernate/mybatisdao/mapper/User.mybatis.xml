<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.javatalks.training.hibernate.mybatisdao.mapper.UserMapper">
  <select id="get" parameterType="user" resultMap="userResult">
    select
      *
    from users
    where id = #{user.id}
  </select>
  <select id="getWithBooks" parameterType="user" resultMap="userWithBooksResult">
    select
      *
    from users
    where id = #{user.id}
  </select>

  <insert id="insert" parameterType="user" useGeneratedKeys="true" keyProperty="id">
    insert into users (username) values (#{username})
  </insert>
  <update id="update" parameterType="user">
    update users
    set username = #{username}
    where id = #{id}
  </update>
  <delete id="delete" parameterType="user">
    delete from users
    where id = #{id}
  </delete>

  <resultMap id="userResult" type="user">
    <id property="id" column="id"/>
    <result property="username" column="username"/>
  </resultMap>

  <resultMap id="userWithBooksResult" type="user">
    <id property="id" column="id"/>
    <result property="username" column="username"/>
    <collection property="books" ofType="book" column="author_id"
                resultMap="org.javatalks.training.hibernate.mybatisdao.mapper.BookMapper.bookResult"/>
  </resultMap>
</mapper>