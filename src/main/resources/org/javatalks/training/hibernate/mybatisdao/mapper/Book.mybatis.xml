<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.javatalks.training.hibernate.mybatisdao.mapper.BookMapper">
  <select id="get" parameterType="long" resultMap="bookResult">
    select
      *
    from book
    where id = #{id}
  </select>
  <select id="getWithAuthor" parameterType="long" resultMap="bookWithAuthorResult">
    select
      *
    from book
    where id = #{id}
  </select>
  <insert id="insert" parameterType="book" useGeneratedKeys="true" keyProperty="id">
    insert into book (title, author_id) values (#{title}, #{author.id})
  </insert>
  <update id="update" parameterType="book">
    update book
    set title = #{title}, author_id = #{author.id}
    where id = #{id}
  </update>
  <delete id="delete" parameterType="book">
    delete from book
    where id = #{id}
  </delete>


  <resultMap id="bookWithAuthorResult" type="book">
    <id property="id" column="id" />
    <result property="title" column="title"/>
    <association property="author" javaType="user" select="org.javatalks.training.hibernate.mybatisdao.mapper.UserMapper.get" column="author_id"/>
  </resultMap>
  <resultMap id="bookResult" type="book">
    <id property="id" column="id" />
    <result property="title" column="title"/>
  </resultMap>
</mapper>